<table name="textmessage_groups">
	<column name="group_id" type="varchar" size="30" notnull="notnull" primary_key="primary_key" />
	<column name="mtype" type="varchar" size="3" default="SMS" notnull="notnull" />
	<column name="member_srl" type="number" size="11" default="0" index="idx_member_srl" />
	<column name="user_id" type="varchar" size="80" />
	<column name="subject" type="varchar" size="40" notnull="notnull" />
	<column name="reservflag" type="char" size="1" default="N" notnull="notnull" />
	<column name="reservdate" type="varchar" size="14" notnull="notnull" />
	<column name="total_count" type="number" size="11" default="0" />
	<column name="waiting_count" type="number" size="11" default="0" />
	<column name="sending_count" type="number" size="11" default="0" />
	<column name="success_count" type="number" size="11" default="0" />
	<column name="failure_count" type="number" size="11" default="0" />
	<column name="cancel_count" type="number" size="11" default="0" />
	<column name="regdate" type="date" notnull="notnull" index="idx_regdate" />
</table>
