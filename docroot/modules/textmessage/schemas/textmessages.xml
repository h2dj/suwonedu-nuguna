<table name="textmessages">
	<column name="message_id" type="varchar" size="30" notnull="notnull" primary_key="primary_key" />
	<column name="group_id" type="varchar" size="30" notnull="notnull" index="idx_group_id" />
	<column name="mtype" type="varchar" size="3" default="SMS" notnull="notnull" />
	<column name="member_srl" type="number" size="11" default="0" index="idx_member_srl" />
	<column name="user_id" type="varchar" size="80" />
	<column name="country_code" type="varchar" size="10" default="82" notnull="notnull" />
	<column name="recipient_no" type="varchar" size="20" notnull="notnull" />
	<column name="sender_no" type="varchar" size="20" notnull="notnull" />
	<column name="subject" type="varchar" size="40" notnull="notnull" />
	<column name="content" type="varchar" size="4000" notnull="notnull" />
	<column name="reservflag" type="char" size="1" default="N" notnull="notnull" />
	<column name="reservdate" type="varchar" size="14" notnull="notnull" />
	<column name="mstat" type="char" size="1" default="0" notnull="notnull" />
	<column name="rcode" type="varchar" size="2" default="99" notnull="notnull" />
	<column name="senddate" type="varchar" size="14" />
	<column name="carrier" type="varchar" size="3" />
	<column name="extra_vars" type="text" />
	<column name="regdate" type="date" notnull="notnull" index="idx_regdate" />
</table>
