<query id="insertTextmessage" action="insert">
	<tables>
		<table name="textmessages" />
	</tables>
	<columns>
		<column name="message_id" var="message_id" notnull="notnull" />
		<column name="group_id" var="group_id" notnull="notnull" />
		<column name="mtype" var="mtype" notnull="notnull" />
		<column name="member_srl" var="member_srl" default="0" />
		<column name="user_id" var="user_id" />
		<column name="country_code" var="country_code" default="82" />
		<column name="recipient_no" var="recipient_no" notnull="notnull" />
		<column name="sender_no" var="sender_no" />
		<column name="subject" var="subject" />
		<column name="content" var="content" notnull="notnull" />
		<column name="reservflag" var="reservflag" default="N" />
		<column name="reservdate" var="reservdate" />
		<column name="mstat" var="mstat" default="9" />
		<column name="rcode" var="rcode" default="99" />
		<column name="extra_vars" var="extra_vars" />
		<column name="regdate" var="regdate" default="curdate()" />
	</columns>
</query>
