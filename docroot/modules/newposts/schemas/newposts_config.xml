<table name="newposts_config">
	<column name="config_srl" type="number" size="11" notnull="notnull" primary_key="primary_key" />
	<column name="admin_phones" type="text" notnull="notnull" />
	<column name="content" type="varchar" size="4000" notnull="notnull" />
	<column name="msgtype" type="varchar" size="5" default="SMS" notnull="notnull" />
	<column name="admin_emails" type="varchar" size="250" notnull="notnull" />
	<column name="sender_name" type="varchar" size="80" />
	<column name="sender_phone" type="varchar" size="250" />
	<column name="sender_email" type="varchar" size="250" />
	<column name="mail_content" type="bigtext" notnull="notnull" />
	<!-- 1: SMS+MAIL, 2: SMS, 3: MAIL -->
	<column name="sending_method" type="char" size="1" default="1" notnull="notnull" />
	<column name="sms_method" type="char" size="1" />
	<column name="time_switch" type="varchar" size="10" />
	<column name="time_start" type="number" size="10" />
	<column name="time_end" type="number" size="10" />
	<column name="reserv_switch" type="varchar" size="10" />
	<column name="selected_days" type="varchar" size="30" />
	<column name="sender_key" type="varchar" size="60" />
	<column name="template_code" type="varchar" size="30" />
	<column name="extra_vars" type="text" />
	<column name="regdate" type="date" notnull="notnull" index="idx_regdate" />
</table>
